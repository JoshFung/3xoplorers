--cutscene functions
function icutscene()
 parts={}
 stars={}
 startimer=0
end

function ucutscene()
 startimer+=1
 if startimer>2 then
 
	 add(stars,{
		 x=rnd(128),
		 y=-10,
		 c=7,
		 speed=.3+rnd(2)
	 })
	 startimer=0
	end

 
 for s in all(stars) do
  s.y+=s.speed
  if s.y>128 then
   del(stars,s)
  elseif s.speed<2 and s.speed>1 then
 	 s.c=6
 	elseif s.speed<=1 then
 	 s.c=5
 	end
 end
 
 for i=1,4 do
	 add(parts,{
	  x=58+rnd(12),
	  y=86+rnd(5),
	  r=2+rnd(2),
	  c=10,
	  speed=1+rnd(2)
	 })
 end

 for p in all(parts) do
  p.y+=p.speed
  p.r-=.1
  if p.r<0 then
   del(parts,p)
  end
  if p.r>3 then
   p.c=10
  elseif p.r<=3 and p.r>1 then
   p.c=9
  elseif p.r<=1 then
   p.c=5
  end
 end
end

function dcutscene()
 cls()
 for p in all(parts) do
  circfill(p.x,p.y,p.r,p.c)
 end
 
 for s in all(stars) do
  pset(s.x,s.y,s.c)
 end
 
 spr(128,48,56,4,4)
end
